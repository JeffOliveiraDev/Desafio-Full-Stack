// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id         String @id
  nome       String
  email      String @unique
  registrado String
  senha      String
  telefone   String
  Contact Contact[]

  @@map("customers")
}

model Contact {
  id         String   @id
  nome       String
  email      String   @unique
  registrado String
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String
  telefone String

  @@map("contacts")
}
